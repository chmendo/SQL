/** SHOW PRICE IN INCREASING ORDER **/

SELECT * FROM bakery_inventory ORDER BY price_in_peso;

/** SHOW WHICH PRODUCTS ARE VEGAN-FRIENDLY **/

SELECT * FROM bakery_inventory WHERE vegan_friendly = "yes" ORDER BY price_in_peso;

